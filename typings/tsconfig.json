{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false,
    
    "typeRoots": [
      "../../typings",
      "../../node_modules/@types"
  ], 
  "rootDirs": [
    "js",
    "jsx",
    "typings"
  ]
  },
 
  "include": [
    "src",
    "index.d.ts"
  ],
  "exclude": [
    "../../node_modules"
],

}
